<h1>タスク新規登録ページ</h1>

<%= form_for(@task) do |f| %>

  <%= f.label :status, 'ステータス' %>
  <%= f.select :status, [["未実施", "未実施"], ["完了", "完了"],  ["保留", "保留"], ["委任", "委任"],["進行中", "進行中"] ],  :prompt => "選択してください" %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.submit '登録' %>
<% end %>

<%= link_to 'タスク一覧に戻る', tasks_path %>